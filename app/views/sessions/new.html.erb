<body class="login">
<div>
  <a class="hiddenanchor" id="signup"></a>
  <a class="hiddenanchor" id="signin"></a>

  <div class="login_wrapper">
    <div class="animate form login_form">
      <% flash.each do |type, message| %>
          <div class="message notice">
            <p>
              <%= message %>
            </p>
          </div>
      <% end %>
      <section class="login_content">
        <%= form_tag do %>
          <h1>Emap Login</h1>
          <div>
            <%= text_field_tag :username, params[:username], class: "form-control", placeholder: "Username" %>
          </div>
          <div >
            <%= password_field_tag :password, params[:password], class: "form-control", placeholder: "Password"  %>
          </div>
          <div>
            <%= submit_tag "Login", class: "btn btn-default submit" %>
          </div>

          <div class="clearfix"></div>

          <div class="separator">
            <p class="change_link">New to site?
              <a class="to_register"> <%= link_to 'Create Account', new_user_path %> </a>
            </p>

            <div class="clearfix"></div>
            <br />

          </div>
        <% end %>
      </section>
    </div>

  </div>
</div>
</body>